<Window x:Class="KursISP21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursISP21"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<ui:TitleBar Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/Assets/icon256.png"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <ui:NavigationView Grid.Row="1" Name="Rootnavigation">
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar Margin="50" x:Name="BreadcrumbBar"/>
            </ui:NavigationView.Header>
        </ui:NavigationView>
        <ui:SnackbarPresenter x:Name="SnackbarPresenter" Grid.Row="1"
                             VerticalAlignment="Stretch" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label>Домой</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label>Авторы</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Label>Заказчики</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3">
                <Label>Издания</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4">
                <Label>Типографии</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5">
                <Label>Заказы</Label>
            </StackPanel>
        </Grid>
        <Frame Grid.Column="1" Grid.Row="1" x:Name="PageFrame"/>
    </Grid>
</Window>
